<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Sensores.MVVM.ViewModels"
             xmlns:views="clr-namespace:Sensores.MVVM.Views"
             x:Class="Sensores.MVVM.Views.CamaraView">

    <ScrollView HorizontalOptions="FillAndExpand"
                BackgroundColor="White">
        <ScrollView VerticalOptions="FillAndExpand">
            <Grid RowDefinitions="70,200,30,50">

                <Grid Grid.Row="1"
                  BackgroundColor="Transparent">
                    <Button Text="Scan QR Code" Clicked="OnScanButtonClicked" />
                    <Label x:Name="resultLabel" Text="" FontSize="24" HorizontalTextAlignment="Center" />
                </Grid>

                <Grid Grid.Row="3"
                  BackgroundColor="Transparent">
                    <Button BackgroundColor="{StaticResource colorAzulClaro}"
                            Text="Escanear"
                            TextColor="White"/>

                </Grid>
            </Grid>
        </ScrollView>
    </ScrollView>
</ContentView>